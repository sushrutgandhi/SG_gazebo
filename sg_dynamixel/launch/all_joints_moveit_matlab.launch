<?xml version ="1.0"?>
<launch>

    <!-- Start the Dynamixel motor manager to control all servos -->
   <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: dxl_manager
            serial_ports:
                pan_tilt_port:
                    port_name: "/dev/ttyUSB0"
                    baud_rate: 1000000
                    min_motor_id: 0
                    max_motor_id: 20
                    update_rate: 20
        </rosparam>
    </node>
    
      <!-- Load joint controller configuration from YAML file to parameter server -->
  <rosparam file="$(find sg_dynamixel)/config/controller_matlab.yaml" command="load"/>

    <!-- Start all SmartArm joint controllers -->
    <node name="controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port pan_tilt_port
                shoulder_yaw_joint_controller shoulder_pitch_joint_controller elbow_pitch_joint_controller wrist_pitch_joint_controller wrist_roll_joint_controller"
		   output="screen"/>
        
   <!-- Start the trajectory controller -->
	<rosparam file="$(find sg_dynamixel)/config/trajectory_controller.yaml" command="load"/>
    <node name="controller_spawner_meta" pkg="dynamixel_controllers" type="controller_spawner.py" 
    args="--manager=dxl_manager
          --type=meta 
          SG_robot/arm_joint_controller shoulder_yaw_joint_controller shoulder_pitch_joint_controller elbow_pitch_joint_controller wrist_pitch_joint_controller wrist_roll_joint_controller"
          output="screen"/>
  
  <!--Publish combined joint info 
  <include file="$(find sg_dynamixel)/launch/joint_state_aggregator.launch" /> -->
  <!-- Start the Dynamixel Joint States Publisher -->
	<node name="dynamixel_joint_states_publisher" pkg="sg_dynamixel" type="dynamixel_joint_state_publisher.py" output="screen" >
		<param name="rate" value="15"/>
	</node>
  </launch>

